{
    "compilerOptions": {
        "baseUrl": "./app",
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es2018",
            "dom"
        ],
        "jsx": "react",
        "types": [
            "react",
            "react-dom",
            "jest"
        ],
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "allowUnreachableCode": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictFunctionTypes": true,
        "alwaysStrict": true,
        "noImplicitThis": true,
        "noImplicitAny": true
    },
    "include": [
        "app/**/*"
    ]
}